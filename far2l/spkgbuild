# description	: Linux port of FAR Manager v2 (http://farmanager.com/)
# homepage	: https://github.com/elfmz/far2l
# depends	: gawk m4 wxgtk3 xerces-c spdlog uchardet libnfs libssh2 openssl samba neon libarchive pcre2 cmake gcc git

name=far2l
version=2021.04.26.alpha
release=1
source="https://github.com/elfmz/far2l/archive/refs/tags/v2021-04-26_alpha.tar.gz"

build() {
	cd $name-2021-04-26_alpha

	mkdir build
	cd    build
	
	cmake -DCMAKE_INSTALL_PREFIX=/usr -DUSEWX=yes -DCMAKE_BUILD_TYPE=Release ..
	make
	make DESTDIR=$PKG install
}
